---
import Tag from './Tag.astro';

interface Props {
  title: string;
  summary: string;
  tags: string[];
  image?: string;
  repoUrl?: string;
  demoUrl?: string;
}

const { title, summary, tags, image = '/images/project-rag.svg', repoUrl, demoUrl } = Astro.props;
---

<article class="card flex h-full flex-col overflow-hidden p-0">
  <img src={image} alt={`${title} architecture thumbnail`} class="h-44 w-full object-cover" loading="lazy" />
  <div class="p-6">
    <h3 class="text-xl font-semibold">{title}</h3>
    <p class="mt-3 flex-1 text-sm leading-relaxed text-slate-600 dark:text-slate-300">{summary}</p>

    <div class="mt-4 flex flex-wrap gap-2">
      {tags.map((tag) => <Tag label={tag} />)}
    </div>

    <div class="mt-6 flex gap-4 text-sm">
      {repoUrl && (
        <a class="font-medium text-brand-600 hover:underline" href={repoUrl} target="_blank" rel="noreferrer">Code</a>
      )}
      {demoUrl && demoUrl !== '#' && (
        <a class="font-medium text-brand-600 hover:underline" href={demoUrl} target="_blank" rel="noreferrer">Demo</a>
      )}
    </div>
  </div>
</article>
