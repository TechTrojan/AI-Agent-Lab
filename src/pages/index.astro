---
import BaseLayout from '../layouts/BaseLayout.astro';
import Tag from '../components/Tag.astro';
import ProjectCard from '../components/ProjectCard.astro';
import projects from '../data/projects.json';

const skills = [
  'Cloud Native',
  'Azure',
  'Kubernetes',
  'CloudFoundry',
  'Microservices',
  'Event-Driven Architecture',
  'REST APIs',
  'SQL/NoSQL',
  'C#',
  'Python',
  'GitLab CI/CD',
  'Observability (Splunk, Dynatrace)'
];
---

<BaseLayout
  title="Hands-on AI Experiments | Mukesh Zala"
  description="Principal/Staff-level backend and cloud-native engineer building resilient systems and applied AI prototypes."
>
  <section class="section container">
    <div class="relative overflow-hidden rounded-3xl border border-slate-200/70 bg-slate-900 p-8 shadow-glow dark:border-slate-800 sm:p-12">
      <img src="/images/home-hero.svg" alt="Cloud-native and AI systems visual" class="absolute inset-0 h-full w-full object-cover opacity-35" loading="eager" />
      <div class="relative">
        <p class="text-sm font-semibold uppercase tracking-[0.2em] text-brand-200">Principal/Staff-level Engineering</p>
    <h1 class="mt-4 max-w-3xl text-4xl font-bold leading-tight text-slate-50 sm:text-6xl">Hands-on AI Experiments</h1>
    <p class="mt-3 text-xl font-medium text-slate-200">Showcasing RAG, LLMs, &amp; System Design</p>
    <p class="mt-6 max-w-3xl text-base leading-relaxed text-slate-200/95">
      Cloud-native backend engineer with an SRE mindset, focused on building reliable distributed systems and applied AI
      prototypes. I design and ship resilient services, event-driven platforms, and measurable LLM/RAG experiments for
      production-minded teams.
    </p>
      </div>
    </div>
  </section>

  <section class="section container">
    <h2 class="section-title">About</h2>
    <p class="mt-4 max-w-3xl leading-relaxed text-slate-600 dark:text-slate-300">
      I specialize in dependable backend platforms where architecture, operations, and developer experience all matter.
      My work spans cloud-native microservices, observability-first operations, and practical AI experimentation that
      turns ideas into usable products. I prioritize simplicity, reliability, and clear trade-off communication.
    </p>
  </section>

  <section class="section container">
    <h2 class="section-title">Skills</h2>
    <div class="mt-5 flex flex-wrap gap-3">
      {skills.map((skill) => <Tag label={skill} />)}
    </div>
  </section>

  <section class="section container">
    <div class="flex items-end justify-between gap-4">
      <h2 class="section-title">Featured Projects</h2>
      <a href="/projects/" class="text-sm font-medium text-brand-600 hover:text-brand-500 hover:underline">View all projects</a>
    </div>
    <div class="mt-6 grid gap-6 md:grid-cols-3">
      {projects.slice(0, 3).map((project) => <ProjectCard {...project} />)}
    </div>
  </section>

  <section class="section container">
    <h2 class="section-title">System Design / Architecture</h2>
    <div class="mt-6 grid gap-6 md:grid-cols-3">
      {[1, 2, 3].map((item) => (
        <figure class="card overflow-hidden p-0">
          <img src={`/architecture/diagram-${item}.svg`} alt={`Architecture diagram ${item}`} class="h-44 w-full object-cover" loading="lazy" />
          <figcaption class="p-5 text-sm text-slate-600 dark:text-slate-300">
            {item === 1 && 'RAG ingestion and retrieval flow with observability hooks.'}
            {item === 2 && 'Event-driven microservices with idempotency and replay strategy.'}
            {item === 3 && 'Cloud-native reliability model with SLOs, tracing, and alerting.'}
          </figcaption>
        </figure>
      ))}
    </div>
  </section>

  <section class="section container">
    <h2 class="section-title">Contact</h2>
    <p class="mt-4 text-slate-600 dark:text-slate-300">Letâ€™s collaborate on resilient platform engineering and practical AI systems.</p>
    <div class="mt-4 flex flex-wrap gap-4 text-sm font-medium">
      <a href="https://github.com/mukeshzala" target="_blank" rel="noreferrer" class="text-brand-600 hover:text-brand-500 hover:underline">GitHub</a>
      <a href="https://www.linkedin.com/in/your-linkedin" target="_blank" rel="noreferrer" class="text-brand-600 hover:text-brand-500 hover:underline">LinkedIn</a>
      <a href="mailto:you@example.com" class="text-brand-600 hover:text-brand-500 hover:underline">you@example.com</a>
    </div>
  </section>
</BaseLayout>
